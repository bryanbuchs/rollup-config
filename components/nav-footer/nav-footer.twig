{{ attach_library('b2b/nav-footer') }}

{%
  set config = [
		'nav',
    'nav-footer',
  ]
%}

<nav{{attributes.setAttribute('class',config).setAttribute('aria-label',heading)}}>
{% block content %}

  <ul>
    {% for item in menu %}
      <li>
        <a href="{{ item.url }}">{{ item.text }}</a>
        {% if item.children %}
          <ul>
            {% for item2 in item.children %}
              <li>
                <a href="{{ item2.url }}">{{ item2.text }}</a>
                {% if item2.children %}
                  <ul>
                    {% for item3 in item2.children %}
                      <li>
                        <a href="{{ item3.url }}">{{ item3.text }}</a>
                        {% if item3.children %}
                          <ul>
                            {% for item4 in item3.children %}
                              <li>
                                <a href="{{ item4.url }}">{{ item4.text }}</a>
                              </li>
                            {% endfor %}
                          </ul>
                        {% endif %}
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
{% endblock %}

</nav>
